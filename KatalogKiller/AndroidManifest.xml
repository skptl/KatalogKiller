<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs9033.katalogkiller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cs9033.katalogkiller.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.LeaderBoardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ForgetPasswordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ScannerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.CameraActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ManualEntry"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ViewAllRequestActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ViewAllResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ViewProcessedResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cs9033.katalogkiller.ViewPendingResultActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>